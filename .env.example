# RedArrow 환경 변수 설정 파일
# 이 파일을 .env로 복사하여 사용하세요: cp .env.example .env

# ========================================
# 증권사 API 설정
# ========================================

# 증권사 선택: koreainvestment, kiwoom, ebest
BROKER_TYPE=koreainvestment

# 거래 모드: simulation (모의투자) 또는 real (실전투자)
TRADING_MODE=simulation

# --- 한국투자증권 API 설정 ---
# API 포털에서 발급받은 키 입력: https://apiportal.koreainvestment.com/
APP_KEY=your_app_key_here
APP_SECRET=your_app_secret_here
ACCOUNT_NUMBER=your_account_number_here

# 모의투자 여부 (true/false)
IS_PAPER_TRADING=true

# --- 키움증권 API 설정 (선택) ---
# KIWOOM_ACCOUNT_NUMBER=your_account_number
# KIWOOM_ACCOUNT_PASSWORD=your_account_password

# --- 이베스트투자증권 API 설정 (선택) ---
# EBEST_USER_ID=your_user_id
# EBEST_ACCOUNT_NUMBER=your_account_number
# EBEST_CERT_PASSWORD=your_cert_password

# ========================================
# 데이터베이스 설정
# ========================================

# PostgreSQL 설정 (과거 데이터 저장)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=redarrow_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Redis 설정 (실시간 데이터 캐싱)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# 리스크 관리 설정
# ========================================

# 손절 기준 (%)
STOP_LOSS_PERCENT=2.5

# 익절 기준 (%)
TAKE_PROFIT_PERCENT=5.0

# 단일 종목 최대 투자금 (원)
MAX_POSITION_SIZE=1000000

# 최대 동시 보유 종목 수
MAX_POSITIONS=5

# 일일 최대 손실률 (%)
DAILY_LOSS_LIMIT=-5.0

# ========================================
# 알림 설정 (선택사항)
# ========================================

# 슬랙 웹훅 URL (선택)
SLACK_WEBHOOK_URL=

# 텔레그램 봇 토큰 (선택)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# 이메일 알림 설정 (선택)
EMAIL_SENDER=
EMAIL_PASSWORD=
EMAIL_RECEIVER=
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# ========================================
# 기타 설정
# ========================================

# 로그 레벨: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 타임존
TIMEZONE=Asia/Seoul
